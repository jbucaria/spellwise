block content
  body

    main.main
      .login-form.login__form
        h2.heading-secondary.ma-bt-lg Log into your account
        form.form.form--login
          .form__group
            label.form__label(for='email') Email address
            input#email.form__input(autocomplete='email',type='email', placeholder='you@example.com', required)
          .form__group.ma-bt-md
            label.form__label(for='password') Password
            input#password.form__input(autocomplete='current-password', type='password', placeholder='••••••••', required, minlength='8')
          .form__group.form_but
            button.btn.btn--green Login
            button#forgot-password.btn.btn--green(type='button') Forgot Password
